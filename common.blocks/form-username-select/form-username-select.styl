@import '../variables.styl';

.form-username-select {
    half-common-padding = common-padding / 2;

    display: flex;
    flex-direction: column;
    align-items: center;

    &__username-input {
        margin-bottom: half-common-padding;

        &_busy,
        &_busy.input_focused {
            box-shadow: 0 0 0 1px theme-error, inset 0 0 0 1px theme-error;
        }

        &_free,
        &_free.input_focused {
            box-shadow: 0 0 0 1px theme-success, inset 0 0 0 1px theme-success;
        }
    }

    &__spinner-wrapper {
        overflow: hidden;
        max-height: 0;
        transition: max-height .15s ease-out;

        &_visible {
            max-height: 28px;
        }
    }

    &__errors {
        width: 100%;
        padding: 0;
        list-style: none;
        margin: 0 0 half-common-padding 0;

        &:empty {
            margin: 0;
        }
    }

    &__error {
        font-family: Arial, Helvetica, sans-serif;
        color: theme-error;
    }

    &__submit-button {
        margin-top: half-common-padding;
        width: 100%;
    }
}
