{
  "author": "Zoo team",
  "name": "pepo",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "git@github.com:shri-zoo/pepo.git"
  },
  "engines": {
    "node": ">=6.3"
  },
  "dependencies": {
    "body-parser": "^1.15.0",
    "chalk": "^1.1.3",
    "connect-mongo": "^1.3.2",
    "cookie-parser": "^1.4.1",
    "cookie-session": "^1.2.0",
    "csurf": "^1.8.3",
    "errorhandler": "^1.4.3",
    "express": "^4.13.4",
    "express-session": "^1.13.0",
    "lodash": "^4.15.0",
    "minimist": "^1.2.0",
    "mongoose": "^4.5.8",
    "mongoose-paginate": "^5.0.0",
    "morgan": "^1.7.0",
    "passport": "^0.3.2",
    "passport-facebook": "^2.1.1",
    "passport-google-oauth2": "^0.1.6",
    "passport-vkontakte": "^0.3.2",
    "passport-yandex": "0.0.3",
    "serve-favicon": "^2.3.0",
    "serve-static": "^1.10.2"
  },
  "devDependencies": {
    "bower": "^1.7.9",
    "chokidar-cli": "^1.2.0",
    "enb": "^1.3.0",
    "enb-bem-techs": "^2.2.1",
    "enb-bemxjst": "^6.4.0",
    "enb-borschik": "^2.4.0",
    "enb-js": "^1.1.0",
    "enb-stylus": "^2.3.2",
    "eslint": "^3.3.0",
    "eslint-config-pedant": "^0.7.0",
    "eslint-plugin-bem-xjst": "^2.0.0",
    "eslint-plugin-import": "^1.13.0",
    "husky": "^0.11.6",
    "nodemon": "^1.9.2",
    "pm2": "^1.1.3",
    "stylelint": "^7.1.0",
    "stylelint-config-standard": "^12.0.0",
    "ym": "^0.1.2"
  },
  "scripts": {
    "start": "node server",
    "postinstall": "npm run deps",
    "deps": "bower i",
    "make": "enb make",
    "watch": "chokidar '*.blocks/**' -c 'npm run make'",
    "precommit": "npm run precommit:js && npm run precommit:css",
    "test": "echo \"Guys you should setup tests for testing =)\" && exit 0",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:js": "eslint .",
    "lint:css": "stylelint \"*.blocks/**/*.css\"; exit 0",
    "precommit:js": "git diff-index --cached HEAD --name-only --diff-filter ACMR | grep -E \"\\.js$\" | xargs ./node_modules/.bin/eslint",
    "precommit:css": "git diff-index --cached HEAD --name-only --diff-filter ACMR | grep -E \"\\.css$\" | xargs ./node_modules/.bin/stylelint",
    "deploy": "pm2 deploy ecosystem.json production",
    "deploy:revert": "pm2 deploy ecosystem.json production revert"
  },
  "private": true
}
